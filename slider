  <title>slider</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    body {
    display: flex;
    justify-content: center;  
    align-items: center;            
    }
    .slider-container {
      position: relative;
      width: 600px;
      height: 400px;
      overflow: hidden;
    }
    .slider {
      display: flex;
      transition: transform 1.0s ease-in-out;
    }
    .slider img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      font-size: 30px;
      color: white;
      cursor: pointer;
      z-index: 10;
    }
    .arrow-left {
      left: 10px;
    }
    .arrow-right {
      right: 10px;
    }
  </style>
