<body>

<div class="slider-container" id="slider">
  <div class="slider">
    <img src="ft1.png" alt="ft1">
    <img src="ft2.png" alt="ft2">
    <img src="ft3.png" alt="ft3">
  </div>
  <div class="arrow arrow-left" id="prev">←</div>
  <div class="arrow arrow-right" id="next">→</div>
</div>

<script src="slider.js"></script>

</body>
</html>

<script>

$(document).ready(function() {
    var slideIndex = 0;
    var slides = $('.slider img');
    var slideCount = slides.length;
    var slideInterval = 3000;
    var sliderInterval;

    function changeSlide() {
      slideIndex++;
      if (slideIndex >= slideCount) {
        slideIndex = 0;
      }
      var offset = -slideIndex * 100;
      $('.slider').css('transform', 'translateX(' + offset + '%)');
    }

    function startSlider() {
      sliderInterval = setInterval(changeSlide, slideInterval);
    }

    function stopSlider() {
      clearInterval(sliderInterval);
    }

    $('#next').click(function() {
      stopSlider();
      changeSlide();
      startSlider();
    });

    $('#prev').click(function() {
      stopSlider();
      slideIndex--;
      if (slideIndex < 0) {
        slideIndex = slideCount - 1;
      }
      var offset = -slideIndex * 100;
      $('.slider').css('transform', 'translateX(' + offset + '%)');
      startSlider();
    });

    $('#slider').hover(function() {
      stopSlider();
    }, function() {
      startSlider();
    });

    startSlider();
  });
</script>
